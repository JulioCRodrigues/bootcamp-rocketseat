{% extends "layout.njk"%}

{% block content %}
    <div class="wrapper">

        <img src="{{about.avatar_url}}" alt="Logo da Rockeatseat">

        <h1>{{about.title}}</h1>
        <h2>{{about.description}}</h2>
        
        
        <ul>
            {% for course in about.courses %}
                <li>{{course.name}}</li>
            {% endfor %}
        </ul>

        <div id="links-footer" class="links">

            {% for link in about.links %}
                <a href="{{link.url}}" target="_blank">{{link.name}}</a>
            {% endfor %}
        </div>

    </div>
{% endblock %}
