{% extends "layout.njk" %}

{% block content %}

<form class="cards" method="POST" action="/instructors">
    <section class="avatar" style="background: url('https://source.unsplash.com/collection/9647150/500x500') no-repeat top center / cover"></section>

    <section class="details">

        <h3>Novo Instrutor</h3>

        <div class="item">
            <div>Instrutor</div>
            <div>
                <input 
                type="text"
                name="name"
                placeholder="Digite o nome do instrutor"
                
                >
            </div>
        </div>

        <div class="item">
            <div>Data de nascimento</div>
            <div>
                <input 
                type="date"
                name="birth"
                 >
            </div>
        </div>

        <div class="item">
            <div>Sexo</div>
            <div>
                <span><input type="radio" name="gender" value="M" checked>Masculino</span>
                <span><input type="radio" name="gender" value="F">Feminino</span>

            </div>
        </div>

        <div class="item">
            <div>Serviços prestados</div>
            <div>
                <input 
                type="text" 
                name="services"
                placeholder="Separe os serviços prestados por vírgula"
                >
            </div>
        </div>

        <button type="submit">Salvar</button>

    </section>
</form>

{% endblock content %}